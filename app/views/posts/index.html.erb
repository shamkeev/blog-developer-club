<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<%= link_to 'New Post', new_post_path, class:'btn btn-primary' %>

<hr>

<% @posts.each do |post| %>
    <div class="card card-block">
      <h4 class="card-title"><%= link_to post.title, post %></h4>
      <%= link_to 'Edit', edit_post_path(post), class: 'card-link'%>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:'card-link' %>
      <p class="card-text"><%= post.content %></p>

      <div class="card-footer text-muted">
        Date created: <%= post.created_at.strftime("%M, %Y")%>
      </div>
    </div>
<% end %>